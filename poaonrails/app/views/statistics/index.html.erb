<p id="notice"><%= notice %></p>

<h1>Listing Statistics</h1>

<table>
  <thead>
    <tr>
      <th>Danger district</th>
      <th>Ratings</th>
      <th>Security</th>
      <th>Accessibility</th>
      <th>Teaching</th>
      <th>Infrastruc</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.each do |statistic| %>
      <tr>
        <td><%= statistic.danger_district %></td>
        <td><%= statistic.ratings %></td>
        <td><%= statistic.security %></td>
        <td><%= statistic.accessibility %></td>
        <td><%= statistic.teaching %></td>
        <td><%= statistic.infrastruc %></td>
        <td><%= statistic.school %></td>
        <td><%= link_to 'Show', statistic %></td>
        <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
        <td><%= link_to 'Destroy', statistic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

